<h1><%=@player.gamerTag %> </h1>

<%= form_tag '/player/add_game' do %>
<%= hidden_field_tag 'player_id',@player.id %>
    <%= select_tag 'game_id',options_from_collection_for_select(@games,:id,:name)%>
    <%=submit_tag "Add"%>
<%end%>

<h2>Has Played: </h2>
    
    <% @player.games.each do |game|%>
    <div>
        <h5><%=game.name%></h5>
        <p><%=game.description%></p>
        
    </div>
    <%= link_to 'Delete', player_remove_game_path(game_id: game.id, player_id: @player.id), method: :delete%>
    
    <%end%>
