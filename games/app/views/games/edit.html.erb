<%=form_for @game do |f|%>
<div>
    <%=f.text_field :name ,placeholder:"Name"%> 
</div>
    <div>
          <%=f.text_field :genre ,placeholder:"Genre"%> 
    </div>
    
    <div>
        <%=f.text_area :description ,placeholder:"Description"%> 
    </div>
    
    <div>
        <%=f.text_field :publisher ,placeholder:"Publisher"%> 
    </div>
  
     <div>
        <%=f.submit "Save"%>
    </div>

<%end%>