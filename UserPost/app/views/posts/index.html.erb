<h3><%=@user.first_name%></h3>
<%if @user.picture.nil? || @user.picture.empty?%>
  <img src ="https://www.sparklabs.com/forum/styles/comboot/theme/images/default_avatar.jpg" height="100">
<%else%>
            
  <%= image_tag @user.picture, height:100%>
        
<%end%>




  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
 
  <%= link_to "Change your password", edit_user_registration_path %>

  <h4>People to follow</h4>
    
    <%@users.each do |user|%>
    
    
      <% if user.id != @user.id%>
        <div class="card" style="width: 13rem;">
            <%if user.picture.nil? || user.picture.empty?%>
              <img src ="https://www.sparklabs.com/forum/styles/comboot/theme/images/default_avatar.jpg" height="100">
            <%else%>
            
            <%= image_tag user.picture, height:100%>
        
         <%end%>
          <div class="card-body">
            <h5 class="card-title"> <%=user.first_name%> <%=user.last_name%></h5>
            <%=link_to 'Add',followers_path(user_id:  user.id), method: :post,class: 'btn btn-primary' %>
          </div>
        </div>
        
        
      <%end%>
    <%end%>
    
    
    <%=link_to "New Post",new_post_path%>
    
    <%@user.posts.each do |post|%>
     <%=post.info%>
      <%= image_tag post.picture, height:100%>
      <%=link_to "Edit",edit_post_path(post.id)%>
     
    <%end%>